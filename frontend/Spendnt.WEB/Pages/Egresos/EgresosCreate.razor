@page "/Egresos/create"
@attribute [Authorize]

@using Spendnt.Shared.DTOs.Egreso
@using Spendnt.Shared.DTOs.Categoria
@using Spendnt.Shared.Entities
@using Spendnt.WEB.Repositories
@using CurrieTechnologies.Razor.SweetAlert2
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<h3>Registrar Nuevo Egreso</h3>

<EgresosForm @ref="egresosForm" Egreso="egresoModel" OnSubmit="Create" ReturnAction="Return" Categorias="listaCategorias" Wallets="listaWallets" />

@code {
#nullable enable
    private EgresoUpdateDto egresoModel = new();
    private EgresosForm? egresosForm;
    private List<CategoriaDto> listaCategorias = new();
    private List<Wallet> listaWallets = new();

    protected override async Task OnInitializedAsync()
    {
        egresoModel.Fecha = egresoModel.Fecha == DateTime.MinValue ? DateTime.Today : egresoModel.Fecha;
        await CargarCategorias();
        await CargarWallets();
    }

    private async Task CargarCategorias()
    {
        try
        {
            var responseHttp = await repository.GetAsync<List<CategoriaDto>>("/api/Categorias");
            if (responseHttp.Error)
            {
                var mensaje = await responseHttp.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", $"No se pudieron cargar las categorías: {mensaje}", SweetAlertIcon.Error);
                listaCategorias = new List<CategoriaDto>();
            }
            else
            {
                listaCategorias = responseHttp.Response ?? new List<CategoriaDto>();
            }
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
        catch (Exception ex)
        {
            await sweetAlertService.FireAsync("Error", $"Error inesperado al cargar categorías: {ex.Message}", SweetAlertIcon.Error);
            listaCategorias = new List<CategoriaDto>();
        }
    }

    private async Task CargarWallets()
    {
        var responseHttp = await repository.GetAsync<List<Wallet>>("api/wallets");
        if (!responseHttp.Error)
        {
            listaWallets = responseHttp.Response ?? new List<Wallet>();
        }
    }

    private async Task Create()
    {
        var createDto = new EgresoCreateDto
        {
            Monto = egresoModel.Monto,
            Fecha = egresoModel.Fecha,
            CategoriaId = egresoModel.CategoriaId,
            WalletId = egresoModel.WalletId
        };

        var responseHttp = await repository.PostAsync("/api/Egresos", createDto);
        if (responseHttp.Error)
        {
            var mensaje = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", mensaje, SweetAlertIcon.Error);
            return;
        }
        navigationManager.NavigateTo("/Egresos");
    }

    private void Return()
    {
        navigationManager.NavigateTo("/Egresos");
    }
}