@page "/Ingresos/edit/{Id:int}"
@attribute [Authorize]

@using Spendnt.Shared.DTOs.Ingreso
@using Spendnt.Shared.DTOs.Categoria
@using Spendnt.WEB.Repositories
@using CurrieTechnologies.Razor.SweetAlert2
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Editar Ingreso</h3>

@if (ingresoModel is null && !loadFailed)
{
    <p><em>Cargando ingreso...</em></p>
}
else if (loadFailed)
{
    <div class="alert alert-danger" role="alert">No se pudo cargar el ingreso para editar.</div>
}
else if (ingresoModel is not null)
{
    <IngresosForm @ref="ingresosForm" Ingreso="ingresoModel!" OnSubmit="Edit" ReturnAction="Return" Categorias="listaCategorias" />
}

@code {
#nullable enable
    [Parameter]
    public int Id { get; set; }

    private IngresoUpdateDto? ingresoModel;
    private IngresosForm? ingresosForm;
    private List<CategoriaDto> listaCategorias = new();
    private bool loadFailed = false;

    protected override async Task OnInitializedAsync()
    {
        loadFailed = false;

        var categoriasTask = CargarCategorias();
        var ingresoTask = CargarIngreso();

        await Task.WhenAll(categoriasTask, ingresoTask);
    }

    private async Task CargarCategorias()
    {
        try
        {
            var responseHttp = await repository.GetAsync<List<CategoriaDto>>("/api/Categorias");
            if (responseHttp.Error)
            {
                await swal.FireAsync("Error", $"No se pudieron cargar las categorías: {await responseHttp.GetErrorMessageAsync()}", SweetAlertIcon.Error);
            }
            else
            {
                listaCategorias = responseHttp.Response ?? new List<CategoriaDto>();
            }
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
        catch (Exception ex)
        {
            await swal.FireAsync("Error", $"Error inesperado al cargar categorías: {ex.Message}", SweetAlertIcon.Error);
        }
    }

    private async Task CargarIngreso()
    {
        try
        {
            var responseHTTP = await repository.GetAsync<IngresoDto>($"/api/Ingresos/{Id}");
            if (responseHTTP.Error)
            {
                loadFailed = true;
                if (responseHTTP.HttpResponseMessage.StatusCode == System.Net.HttpStatusCode.NotFound)
                {
                    navigationManager.NavigateTo("/Ingresos");
                }
                else
                {
                    var messageError = await responseHTTP.GetErrorMessageAsync();
                    await swal.FireAsync("Error", messageError, SweetAlertIcon.Error);
                }
            }
            else
            {
                var ingresoDetalle = responseHTTP.Response;
                if (ingresoDetalle == null)
                {
                    loadFailed = true;
                }
                else
                {
                    ingresoModel = new IngresoUpdateDto
                    {
                        Monto = ingresoDetalle.Monto,
                        Fecha = ingresoDetalle.Fecha,
                        CategoriaId = ingresoDetalle.CategoriaId
                    };
                }
            }
        }
        catch (AccessTokenNotAvailableException exception)
        {
            loadFailed = true;
            exception.Redirect();
        }
        catch (Exception ex)
        {
            loadFailed = true;
            await swal.FireAsync("Error", $"Error inesperado al cargar el ingreso: {ex.Message}", SweetAlertIcon.Error);
        }
    }

    private async Task Edit()
    {
        if (ingresoModel is null)
        {
            return;
        }

        var responseHTTP = await repository.PutAsync($"/api/Ingresos/{Id}", ingresoModel);
        if (responseHTTP.Error)
        {
            var mensajeError = await responseHTTP.GetErrorMessageAsync();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            navigationManager.NavigateTo("/Ingresos");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("/Ingresos");
    }
}