@page "/Saldo/create"
@attribute [Authorize]

@using Spendnt.Shared.DTOs.Saldo
@using Spendnt.WEB.Repositories
@using CurrieTechnologies.Razor.SweetAlert2
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

@inject IRepository repository
@inject NavigationManager navigationManager
@inject SweetAlertService sweetAlertService

<h3>Crear/Inicializar Saldo</h3>
<p class="text-muted">Nota: Generalmente, el saldo principal se crea automáticamente al registrar un nuevo usuario o con la primera transacción. Esta página podría ser para casos especiales o si se permite más de un saldo por usuario (lo cual no es el modelo actual).</p>

@if (saldoDetalle is null && !loadFailed)
{
    <p><em>Inicializando...</em></p>
}
else if (loadFailed)
{
    <div class="alert alert-danger">No se pudo cargar información de saldo para inicializar.</div>
}
else
{
    <SaldoForm @ref="saldoForm" Saldo="saldoUpdateModel" OnSubmit="HandleCreate" ReturnAction="Return" />
}

@code {
#nullable enable
    private SaldoDto? saldoDetalle;
    private SaldoUpdateDto saldoUpdateModel = new();
    private SaldoForm? saldoForm;
    private bool loadFailed;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var responseHttp = await repository.GetAsync<SaldoDto>("/api/Saldo/actual");
            if (responseHttp.Error)
            {
                loadFailed = true;
                var mensaje = await responseHttp.GetErrorMessageAsync();
                await sweetAlertService.FireAsync("Error", $"No se pudo obtener el saldo actual: {mensaje}", SweetAlertIcon.Error);
                return;
            }

            saldoDetalle = responseHttp.Response;
            if (saldoDetalle is null)
            {
                loadFailed = true;
            }
            else
            {
                saldoUpdateModel = new SaldoUpdateDto { TotalSaldo = saldoDetalle.TotalSaldo };
            }
        }
        catch (AccessTokenNotAvailableException exception)
        {
            loadFailed = true;
            exception.Redirect();
        }
        catch (Exception ex)
        {
            loadFailed = true;
            await sweetAlertService.FireAsync("Error", $"Error inesperado al cargar el saldo: {ex.Message}", SweetAlertIcon.Error);
        }
    }

    private async Task HandleCreate()
    {
        if (saldoDetalle is null)
        {
            await sweetAlertService.FireAsync("Error", "No hay un saldo inicial para actualizar.", SweetAlertIcon.Warning);
            return;
        }

        var responseHttp = await repository.PutAsync($"/api/Saldo/{saldoDetalle.Id}", saldoUpdateModel);
        if (responseHttp.Error)
        {
            var mensaje = await responseHttp.GetErrorMessageAsync();
            await sweetAlertService.FireAsync("Error", $"No se pudo crear el saldo: {mensaje}", SweetAlertIcon.Error);
            return;
        }

        await sweetAlertService.FireAsync("Éxito", "Saldo actualizado correctamente.", SweetAlertIcon.Success);
        navigationManager.NavigateTo("/Saldo");
    }

    private void Return()
    {
        navigationManager.NavigateTo("/Saldo");
    }
}
